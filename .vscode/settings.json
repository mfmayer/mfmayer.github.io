{
  "markdown.styles": [
    "markdown.css"
  ],
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100
  },
  "html.format.enable": false,
  "mdPasteEnhanced.basePath": "${currentFileDir}",
  "mdPasteEnhanced.path": "${currentFileDir}/assets",
  "mdPasteEnhanced.renderPattern": "${imagePath}",
  "workbench.editorAssociations": {
    "*.drawio.svg": "hediet.vscode-drawio-text",
    "*.svg": "svgPreviewer.customEditor"
  },
  "cSpell.language": "en,de",
  "cSpell.enableFiletypes": [
    "!asciidoc",
    "!c",
    "!cpp",
    "!csharp",
    "!css",
    "!elixir",
    "!erlang",
    "!git-commit",
    "!go",
    "!graphql",
    "!handlebars",
    "!haskell",
    "!html",
    "!jade",
    "!java",
    "!javascript",
    "!javascriptreact",
    "!json",
    "!jsonc",
    "!jupyter",
    "!latex",
    "!less",
    "!php",
    "!plaintext",
    "!pug",
    "!python",
    "!restructuredtext",
    "!rust",
    "!scala",
    "!scminput",
    "!scss",
    "!swift",
    "!text",
    "!typescript",
    "!typescriptreact",
    "!vue",
    "!yaml",
    "!yml"
  ]
}